{
  "name": "e2e-lab",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "description": "A modern feedback application built with React and Express.js that allows users to submit and view feedback with star ratings.",
  "homepage": "https://github.com/bidemiajala/e2e-lab#readme",
  "license": "ISC",
  "author": "Demi Ajala",
  "scripts": {
    "pretest:cypress": "kill-port 3000 5001 || true",
    "test:cypress": "start-server-and-test 'cd backend && npm start' http://localhost:5001/api/health 'cd frontend && npm start' http://localhost:3000 'cypress run'",
    "test:cypress:component": "cypress run --component",
    "test:cypress:component:open": "cypress open --component",
    "start:servers": "concurrently -k \"npm:start:backend\" \"npm:start:frontend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "test:cypress:open": "start-server-and-test start:servers http://localhost:3000 'cypress open'",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:all": "npm run test:cypress && npm run test:playwright",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed:db": "cd backend && npm run seed:db"
  },
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@babel/preset-env": "7.27.2",
    "@babel/preset-react": "7.27.1",
    "@cypress/react": "^8.0.0",
    "@cypress/webpack-dev-server": "^4.1.0",
    "@playwright/test": "1.42.1",
    "@tailwindcss/postcss7-compat": "2.2.17",
    "@types/node": "20.11.24",
    "autoprefixer": "10.4.21",
    "babel-loader": "10.0.0",
    "concurrently": "8.2.2",
    "css-loader": "7.1.2",
    "cypress": "14.4.0",
    "eslint": "8.57.0",
    "eslint-plugin-cypress": "2.15.1",
    "eslint-plugin-playwright": "1.5.2",
    "kill-port": "2.0.1",
    "postcss-loader": "8.1.1",
    "start-server-and-test": "2.0.3",
    "style-loader": "4.0.0",
    "tailwindcss": "4.1.8",
    "webpack": "5.99.9",
    "webpack-cli": "6.0.1"
  },
  "dependencies": {
    "ajv": "8.17.1",
    "ajv-keywords": "5.1.0",
    "schema-utils": "4.3.2",
    "webpack-dev-server": "5.2.1"
  },
  "resolutions": {
    "body-parser": "^1.20.2",
    "nth-check": "^2.1.1",
    "path-to-regexp": "^6.2.1",
    "postcss": "^8.4.31",
    "@svgr/webpack": "^8.1.0",
    "svgo": "^3.2.0",
    "resolve-url-loader": "^5.0.0"
  }
}
