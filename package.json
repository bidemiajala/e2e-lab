{
  "name": "e2e-lab",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "description": "A modern feedback application built with React and Express.js that allows users to submit and view feedback with star ratings.",
  "homepage": "https://github.com/bidemiajala/e2e-lab#readme",
  "license": "ISC",
  "author": "Demi Ajala",
  "scripts": {
    "test:cypress": "start-server-and-test start:all http://localhost:3000 'cypress run'",
    "test:cypress:open": "start-server-and-test start:all http://localhost:3000 'cypress open'",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:all": "npm run test:cypress && npm run test:playwright",
    "start:all": "concurrently \"cd backend && npm start\" \"cd frontend && npm start\"",
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed:db": "cd backend && npm run seed:db"
  },
  "devDependencies": {
    "@playwright/test": "1.42.1",
    "@types/node": "20.11.24",
    "concurrently": "8.2.2",
    "cypress": "14.4.0",
    "eslint": "8.57.0",
    "eslint-plugin-cypress": "2.15.1",
    "eslint-plugin-playwright": "1.5.2",
    "start-server-and-test": "2.0.3"
  },
  "dependencies": {
    "ajv": "8.17.1",
    "ajv-keywords": "5.1.0",
    "schema-utils": "4.3.2",
    "webpack-dev-server": "5.2.1"
  }
}
